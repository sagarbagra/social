<div class="panel panel-danger" id="aj">
	<div class="panel-heading"> <%=@post.title%></div>
	<div class="panel-body"><%= image_tag(@post.image_url, :size => "260x180") %> 
	</div>
	<h2><%= @post.comments.count %> Comments ::</h2>
	
	<%= link_to " #{@post.likes.count} Likes", all_likes_post_path(@post.id) , class: "btn btn-primary"%>
	<%if @my_like.present?%>
	<%= link_to "UnLike", unlike_post_path(@post.id) ,method: :post  ,  class: "btn btn-primary" %>
	<%else%>
	<%= link_to "Like", like_post_path(@post),method: :post  , class: "btn btn-primary" %>
	<%end%>
	 <h3> Add comment</h3>
	<%= render 'posts/comment'%>
</div> 


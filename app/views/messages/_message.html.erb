

<div class="content mt-5">
	<div class="animated fadeIn">
		<div class="row">
			<div class="col-md-8">
				<div class="card" style="margin-left: 339px;">
					<div class="card-header">          
						<div class="card-body">
							<div class="panel panel-danger" data-conversation-id="<%= @conversation.id %>">
								<div class="panel-heading"> <p><%= image_tag(current_user.image, :size => "260x180",style: "height: 42px;border-top-left-radius: 8px;border-radius: 10px;width: 63px;") %>
									<b><%= current_user.name.titleize%></b></p></div>	
								<div class="messages-list" >
									<ul>	
										<% @messages.each do |message| %>
										<% if message.message %>
										<% user = User.find(message.user_id) %>
										<li>
											<strong><%= user.name.titleize %></strong>
											<p><%= message.message %></p>
										</li>		
										<% end %>
										<% end %>
									</ul>
								</div>							
								
								<%= form_for [@conversation, @message] , :class => 'new_message' do |f| %>
								<div class="field">
									<%= f.text_area :message,  :rows => 2, :cols => 50 %>
								</div>
								<%= f.text_field :conversation_id, value: @conversation.id, type: "hidden"  %>
								<%= f.text_field :user_id, value: current_user.id, type: "hidden"  %>		
								<%= f.submit "send", class: "ui blue labeled submit icon button" %>

								<% end %>
							</div> 
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


<body>
<div class="container">
  
  <table class="table">
    <thead>
      <tr>
        <th>Firstname</th>
        <th>Image</th>
        <th colspan="4">Action</th>
      </tr>
    </thead>


  <%@friends.each do |friend|%>
      
    <tbody>
      <tr>
        <td><%=friend.user.name%></td>
        <td><%= image_tag(friend.user.try(:image).try(:url),:size => "260x180") %></td>
        
        <td><%= link_to "Details",friendships_path(:friend_id => friend), class: "btn btn-info"%></td>
      </tr>            
    </tbody>
    <%end%>
  </table>
</div>

</body>
</html>
